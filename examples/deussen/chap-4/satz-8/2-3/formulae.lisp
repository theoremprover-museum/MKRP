(* ************************************************)
(* DEFINITIONEN DER MENGENLEHRE)
(SORT SET:ANY)
(SORT ELEMENT:SET)
(TYPE EL (ELEMENT SET))
(* DEFINITION 1.3: KARTESISCHES PRODUKT)
(TYPE CARTES (SET SET) :SET)
(TYPE PAIR (ELEMENT ELEMENT) :ELEMENT)
(* SORTENPROBLEM!!!)
(* DEFINITION 1.4: VEREINIGUNG)
(TYPE UNIONZWEI (REL REL) :REL)
(SORT REL:SET)
(SORT EL.OF.S:ELEMENT)
(ALL X,Y:REL ALL A,B:EL.OF.S EL (PAIR (A B) X) OR EL (PAIR (A B) Y) IMPL EL (PAIR (A B) UNIONZWEI (X Y)))
(* ALL X,Y,Z:REL ALL A,B:EL.OF.S EL (PAIR (A B) UNIONDREI (X Y Z))
   IMPL 
   EL (PAIR (A B) X) OR EL (PAIR (A B) Y) OR EL (PAIR (A B) Z))
(* ************************************************************************)
(* DEFINITIONEN VON RELATIONEN AUF EINER FESTEN MENGE S)
(TYPE S:SET)
(* DEFINITION 2.3: IDENTISCHE RELATION)
(TYPE IDENTITY:REL)
(* DEFINITION 2.4: KONVERSE RELATION)
(TYPE CONVERSE (REL) :REL)
(* SORTENPROBLEM)
(* DEFINITION1.1: TEILMENGE)
(TYPE SUBSET (REL REL))
(ALL X,Y:REL (ALL A,B:EL.OF.S EL (PAIR (A B) X) IMPL EL (PAIR (A B) Y)) IMPL SUBSET (X Y))
(* GLEICHHEIT VON RELATIONEN ENTSPRICHT SET.EQUAL)
(ALL X,Y:REL SUBSET (X Y) AND SUBSET (Y X) IMPL X = Y)
(* DEFINITION 2.8: AEQUIVALENZRELATION)
(SORT EQU.RELATION:REL)
(* DEFINITION 2.10: REFLEXIV-SYMMETRISCHER ABSCHLUSS)
(TYPE REF.SYM.CLOS (REL) :REL)
(ALL RHO:REL REF.SYM.CLOS (RHO) = UNIONZWEI (UNIONZWEI (RHO CONVERSE (RHO)) IDENTITY))
(* SATZ4-8>2-1)
(ALL RHO,SIGMA:EQU.RELATION 
     SUBSET (UNIONZWEI (RHO SIGMA) UNIONZWEI (UNIONZWEI (UNIONZWEI (RHO SIGMA) CONVERSE (UNIONZWEI (RHO SIGMA))) IDENTITY)))
(* SATZ4-8>2-2)
(* STILLSCHWEIGENDE ANNAHME UNIONDREI (A B C) = UNIONZWEI (UNIONZWEI (A B) C))
(ALL RHO,SIGMA:EQU.RELATION ALL A,B:EL.OF.S
     EL (PAIR (A B) UNIONZWEI (UNIONZWEI (UNIONZWEI (RHO SIGMA) CONVERSE (UNIONZWEI (RHO SIGMA))) IDENTITY))
     IMPL					
     EL (PAIR (A B) RHO) OR EL (PAIR (A B) SIGMA))

(ALL RHO,SIGMA:EQU.RELATION UNIONZWEI (RHO SIGMA) = REF.SYM.CLOS (UNIONZWEI (RHO SIGMA)))
