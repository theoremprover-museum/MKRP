(* ************************************************)
(* DEFINITIONEN DER MENGENLEHRE)
(SORT SET:ANY)
(SORT ELEMENT:SET)
(TYPE EL (ELEMENT SET))
(SORT REL:SET)
(* DEFINITION 1.1: TEILMENGE)
(* SORTENPROBLEM!!!!)
(TYPE SUBSET (SET SET))
(ALL X,Y:SET SUBSET (X Y) EQV (ALL A:ELEMENT EL (A X) IMPL EL (A Y)))
(* DEFINITION 1.3: KARTESISCHES PRODUKT)
(TYPE CARTES (SET SET) :SET)
(TYPE PAIR (ELEMENT ELEMENT) :ELEMENT)
(* DEFINITION 1.4: VEREINIGUNG)
(TYPE UNION (REL REL) :REL)
(ALL X,Y:REL ALL A:ELEMENT EL (A UNION (X Y)) EQV EL (A X) OR EL (A Y))
(* ************************************************************************)
(* DEFINITIONEN VON RELATIONEN AUF EINER FESTEN MENGE S)
(TYPE S:SET)
(SORT EL.OF.S:ELEMENT)
(* DEFINITION 2.1: RELATION)
(* DEFINITION 2.3: IDENTISCHE RELATION)
(TYPE IDENTITY:REL)
(ALL A:ELEMENT EL (A IDENTITY) EQV (EX B:EL.OF.S A = PAIR (B B)))
(* DEFINITION 2.4: KONVERSE RELATION)
(TYPE CONVERSE (REL) :REL)
(* SORTENPROBLEM!!!!)
(ALL RHO:REL ALL A,B:EL.OF.S EL (PAIR (A B) CONVERSE (RHO)) EQV EL (PAIR (B A) RHO))
(SORT EQU.RELATION:REL)

(ALL RHO,SIGMA:EQU.RELATION
     SUBSET (UNION (RHO SIGMA) UNION (UNION (UNION (RHO SIGMA) CONVERSE (UNION (RHO SIGMA))) IDENTITY)))