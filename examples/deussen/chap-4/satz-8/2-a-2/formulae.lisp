(* ************************************************)
(* DEFINITIONEN DER MENGENLEHRE)
(SORT SET:ANY)
(SORT ELEMENT:SET)
(TYPE EL (ELEMENT SET))
(* DEFINITION 1.3: KARTESISCHES PRODUKT)
(TYPE CARTES (SET SET) :SET)
(TYPE PAIR (ELEMENT ELEMENT) :ELEMENT)
(* SORTENPROBLEM!!!)
(* DEFINITION 1.4: VEREINIGUNG)
(TYPE UNIONDREI (REL REL REL) :REL)
(TYPE UNIONZWEI (REL REL) :REL)
(SORT REL:SET)
(SORT EL.OF.S:ELEMENT)
(ALL X,Y:REL ALL A,B:EL.OF.S EL (PAIR (A B) UNIONZWEI (X Y)) IMPL EL (PAIR (A B) X) OR EL (PAIR (A B) Y))
(ALL X,Y,Z:REL ALL A,B:EL.OF.S 
 EL (PAIR (A B) UNIONDREI (X Y Z)) IMPL EL (PAIR (A B) X) OR EL (PAIR (A B) Y) OR EL (PAIR (A B) Z))
(* ************************************************************************)
(* DEFINITIONEN VON RELATIONEN AUF EINER FESTEN MENGE S)
(TYPE S:SET)
(* DEFINITION 2.3: IDENTISCHE RELATION)
(TYPE IDENTITY:REL)
(* DEFINITION 2.4: KONVERSE RELATION)
(TYPE CONVERSE (REL) :REL)
(* SORTENPROBLEM!!!)
(ALL RHO:REL ALL A,B:EL.OF.S EL (PAIR (A B) CONVERSE (RHO)) EQV EL (PAIR (B A) RHO))
(* SORTENPROBLEM)
(* DEFINITION1.1: TEILMENGE)
(TYPE SUBSET (REL REL))
(ALL X,Y:REL SUBSET (X Y) EQV (ALL A,B:EL.OF.S EL (PAIR (A B) X) IMPL EL (PAIR (A B) Y)))
(* DEFINITION 2.5: REFLEXIV)
(TYPE REFLEXIV (REL))
(ALL RHO:REL REFLEXIV (RHO) EQV SUBSET (IDENTITY RHO))
(* DEFINITION 2.6: SYMMETRISCH)
(TYPE SYMMETRISCH (REL))
(ALL RHO:REL SYMMETRISCH (RHO) EQV (ALL A,B:EL.OF.S EL (PAIR (A B) RHO) IMPL EL (PAIR (B A) RHO)))
(* DEFINITION 2.7: TRANSITIV)
(TYPE TRANSITIV (REL))
(* DEFINITION 2.8: AEQUIVALENZRELATION)
(SORT EQU.RELATION:REL)
(ALL RHO:EQU.RELATION REFLEXIV (RHO) AND SYMMETRISCH (RHO) AND TRANSITIV (RHO))

(ALL RHO,SIGMA:EQU.RELATION ALL A,B:EL.OF.S 
 EL (PAIR (A B) UNIONDREI (UNIONZWEI (RHO SIGMA) CONVERSE (UNIONZWEI (RHO SIGMA)) IDENTITY))
 IMPL 
 EL (PAIR (A B) RHO) OR EL (PAIR (A B) SIGMA))
