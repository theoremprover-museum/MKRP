(* ************************************************)
(* DEFINITIONEN DER MENGENLEHRE)
(SORT SET:ANY)
(SORT ELEMENT:SET)
(TYPE EL (ELEMENT SET))
(* DEFINITION 1.3: KARTESISCHES PRODUKT)
(TYPE CARTES (SET SET) :SET)
(TYPE PAIR (ELEMENT ELEMENT) :ELEMENT)
(* DEFINITION 1.7: FUNKTION)
(SORT SYMB.OF.FUNCTION:ANY)
(TYPE MAPPING (SYMB.OF.FUNCTION SET SET))
(TYPE APPLY (SYMB.OF.FUNCTION ELEMENT) :ELEMENT)
(* DEFINITION 1.8: SURJEKTIV)
(TYPE SURJECTIVE (SYMB.OF.FUNCTION SET SET))
(ALL F:SYMB.OF.FUNCTION ALL X,Y:SET )
 SURJECTIVE (F X Y)
 EQV 
 MAPPING (F X Y) AND (ALL B:ELEMENT EL (B Y) IMPL (EX A:ELEMENT EL (A X) AND APPLY (F A) = B))
(* ************************************************************************)
(* DEFINITIONEN VON RELATIONEN AUF EINER FESTEN MENGE S)
(SORT REL:SET)
(TYPE S:SET)
(SORT EL.OF.S:ELEMENT)
(ALL A:EL.OF.S EL (A S))
(* DEFINITION 2.8: AEQUIVALENZRELATION)
(SORT EQU.RELATION:REL)
(* DEFINITION 2.13: DIE VON EINER ABBILDUNG PHI VON S NACH U INDUZIERTE AEQUIVALENZRELATION)
(TYPE IND.EQU (SYMB.OF.FUNCTION SET) :EQU.RELATION)
(* DEFINITION 2.14: VORBEREICH EINER RELATION UND EINES ELEMENTES)
(TYPE PREIMAGE (REL EL.OF.S) :ELEMENT)
(* DEFINITION 2.15: QUOTIENTENMENGE S MODULO RHO)
(TYPE MODULO (EQU.RELATION) :SET)
(ALL RHO:EQU.RELATION ALL A:ELEMENT EL (A MODULO (RHO)) EQV (EX B:EL.OF.S A = PREIMAGE (RHO B)))
(* SATZ 4.10.2 UND METAREGEL LIEFERT DIE FUNKTIONSEIGENSCHAFT VON GR.PHI)
(TYPE GR.PHI (SYMB.OF.FUNCTION SET) :SYMB.OF.FUNCTION)
(ALL PHI:SYMB.OF.FUNCTION ALL U:SET 
 SURJECTIVE (PHI S U)
 IMPL 
 MAPPING (GR.PHI (PHI U) MODULO (IND.EQU (PHI U)) U)
 AND 
 (ALL T:EL.OF.S APPLY (GR.PHI (PHI U) PREIMAGE (IND.EQU (PHI U) T)) = APPLY (PHI T)))
(TYPE S.SURJECTIVE (SYMB.OF.FUNCTION SET SET))
(ALL F:SYMB.OF.FUNCTION ALL Y:SET 
     S.SURJECTIVE (F S Y) EQV MAPPING (F S Y) AND (ALL B:ELEMENT EL (B Y) IMPL (EX A:EL.OF.S APPLY (F A) = B)))

(ALL PHI:SYMB.OF.FUNCTION ALL U:SET 
     S.SURJECTIVE (PHI S U) IMPL SURJECTIVE (GR.PHI (PHI U) MODULO (IND.EQU (PHI U)) U))
